@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center p-5 bg-primary text-white rounded">
    <h1 class="display-4">Contract Monthly Claim System</h1>
    <p>Simplifying the submission and approval of monthly claims for independent contractor lecturers</p>

    <a class="btn btn-light m-2" href="/Claims/Create">Submit Your First Claim</a>
    <a class="btn btn-primary m-2" href="/Claims/Index">My Claims</a>
    <a class="btn btn-warning m-2" href="/Coordinator/Index">Coordinator Dashboard</a>
    <a class="btn btn-danger m-2" href="/Manager/Index">Manager Dashboard</a>
</div>

<div class="container mt-5">
    <h2 class="text-center">How It Works</h2>
    <div class="row text-center mt-4">
        <div class="col-md-4">
            <i class="bi bi-plus-circle fs-1"></i>
            <h5>Submit Claims</h5>
            <p>Submit your monthly claims effortlessly through a straightforward, user-friendly interface that captures all required details.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-arrow-repeat fs-1"></i>
            <h5>Track Status</h5>
            <p>Track the progress of your claims with real-time updates during the approval process.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-upload fs-1"></i>
            <h5>Upload Documents</h5>
            <p>Attach any supporting documents to validate the claims you make.</p>
        </div>
    </div>
</div>
