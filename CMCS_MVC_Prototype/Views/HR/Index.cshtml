@* Views/HR/Index.cshtml *@
@model IEnumerable<CMCS_MVC_Prototype.Models.User>
@{
    ViewData["Title"] = "HR - User Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>👥 User Management</h2>
        <a asp-action="Create" class="btn btn-success">
            <span class="emoji-icon">➕</span> Add New User
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Lecturer ID</th>
                        <th>Hourly Rate</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.LecturerId))
                                {
                                    <span class="badge bg-info">@user.LecturerId</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (user.Role == "Lecturer")
                                {
                                    <span>R @user.HourlyRate.ToString("F2")</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <span class="badge @GetRoleBadgeClass(user.Role)">@user.Role</span>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@user.Id"
                                       class="btn btn-outline-primary" title="Edit User">
                                        <span class="emoji-icon">✏️</span> Edit
                                    </a>
                                    @if (user.IsActive)
                                    {
                                        <form asp-action="Deactivate" asp-route-id="@user.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-warning"
                                                    onclick="return confirm('Deactivate this user?')"
                                                    title="Deactivate User">
                                                <span class="emoji-icon">⏸️</span>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="Activate" asp-route-id="@user.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-success"
                                                    onclick="return confirm('Activate this user?')"
                                                    title="Activate User">
                                                <span class="emoji-icon">▶️</span>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>👥 No Users Found</h4>
            <p>There are no users in the system yet.</p>
            <a asp-action="Create" class="btn btn-primary">Add First User</a>
        </div>
    }
</div>

@functions {
    public string GetRoleBadgeClass(string role)
    {
        return role?.ToLower() switch
        {
            "hr" => "bg-danger",
            "coordinator" => "bg-warning text-dark",
            "manager" => "bg-success",
            "lecturer" => "bg-primary",
            _ => "bg-secondary"
        };
    }
}

@section Styles {
    <style>
        .table th {
            background-color: #343a40;
            color: white;
            font-weight: bold;
        }

        .badge {
            font-size: 0.85em;
            padding: 0.5em 0.75em;
        }

        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}