@model IEnumerable<CMCS_MVC_Prototype.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims for Verification";
}

<div class="container mt-4">
    <h2>Pending Claims for Verification</h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-5">
                    <div class="mb-4">
                        <div style="font-size: 4rem; color: #28a745;">✓</div>
                        <h3 class="text-muted mt-3">All claims have been reviewed.</h3>
                        <p class="lead text-muted">No pending approvals.</p>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                            Return to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Lecturer Name</th>
                        <th>Lecturer ID</th>
                        <th>Month</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Notes</th>
                        <th>Evidence</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>@claim.LecturerId</td>
                            <td>@claim.Month</td>
                            <td>@claim.HoursWorked.ToString("F2")</td>
                            <td>@claim.HourlyRate.ToString("F2")</td>
                            <td>@claim.Total.ToString("F2")</td>
                            <td>@claim.Notes</td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                {
                                    <a href="@Url.Content("~/Documents/" + claim.DocumentPath)" target="_blank" class="btn btn-sm btn-outline-primary">Open</a>
                                }
                                else
                                {
                                    <span class="text-muted">No document</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <form asp-action="Approve" method="post">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                    </form>
                                    <form asp-action="Reject" method="post" class="ms-1">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<footer class="border-top footer text-muted text-center py-3 mt-5">
    <div class="container">
        &copy; 2025 Contract Monthly Claim System (CMCS)
    </div>
</footer></div>