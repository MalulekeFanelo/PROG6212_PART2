@model CMCS_MVC_Prototype.Models.Claim
@{
    ViewData["Title"] = "Submit Your Claim";
    var currentUser = Context.Items["User"] as CMCS_MVC_Prototype.Models.User;
}

<style>
    #totalAmount {
        font-weight: bold;
        background-color: #f8f9fa !important;
        border: 2px solid #dee2e6;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .is-invalid {
        border-color: #dc3545 !important;
    }
</style>

<div class="container mt-4">
    <h2>Submit Your Claim</h2>

    <div class="alert alert-info">
        <strong>💡 Auto-filled Information:</strong> Your personal details and hourly rate are automatically loaded from your profile.
    </div>

    <form asp-action="Create" asp-controller="Claims" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <!-- Hidden fields for auto-populated data -->
        <input type="hidden" asp-for="LecturerName" value="@currentUser.FullName" />
        <input type="hidden" asp-for="LecturerId" value="@currentUser.LecturerId" />
        <input type="hidden" asp-for="HourlyRate" value="@currentUser.HourlyRate" />

        <!-- Validation Errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <h5>Please fix the following errors:</h5>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <div class="row">
            <div class="col-md-6">
                <!-- Auto-filled Information -->
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">👤 Your Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <strong>Name:</strong><br>
                                <span class="text-primary">@currentUser.FullName</span>
                            </div>
                            <div class="col-6">
                                <strong>Lecturer ID:</strong><br>
                                <span class="text-primary">@currentUser.LecturerId</span>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <strong>Hourly Rate:</strong><br>
                                <span class="text-success">R @currentUser.HourlyRate.ToString("F2")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Month" class="form-label fw-bold"></label>
                    <select asp-for="Month" class="form-control">
                        <option value="">Select Month</option>
                        <option value="2025-01">January 2025</option>
                        <option value="2025-02">February 2025</option>
                        <option value="2025-03">March 2025</option>
                        <option value="2025-04">April 2025</option>
                        <option value="2025-05">May 2025</option>
                        <option value="2025-06">June 2025</option>
                        <option value="2025-07">July 2025</option>
                        <option value="2025-08">August 2025</option>
                        <option value="2025-09">September 2025</option>
                        <option value="2025-10">October 2025</option>
                        <option value="2025-11">November 2025</option>
                        <option value="2025-12">December 2025</option>
                    </select>
                    <span asp-validation-for="Month" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="HoursWorked" class="form-label fw-bold"></label>
                    <input asp-for="HoursWorked" class="form-control" type="number" step="0.1" min="0.1" max="180"
                           id="hoursWorked" placeholder="Enter hours worked (max 180)" />
                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    <small class="form-text text-muted">Maximum 180 hours per month allowed</small>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Hourly Rate</label>
                    <div class="input-group">
                        <span class="input-group-text">R</span>
                        <input type="text" class="form-control" value="@currentUser.HourlyRate.ToString("F2")" readonly
                               style="background-color: #e9ecef; font-weight: bold;">
                    </div>
                    <small class="form-text text-muted">Set by HR - cannot be changed</small>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Total Amount</label>
                    <div class="input-group">
                        <span class="input-group-text">R</span>
                        <input type="text" class="form-control" id="totalAmount" value="0.00" readonly
                               style="font-weight: bold; font-size: 1.1em; background-color: #f8f9fa;">
                    </div>
                    <small class="form-text text-muted">Automatically calculated</small>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Notes" class="form-label fw-bold"></label>
            <textarea asp-for="Notes" class="form-control" rows="3"
                      placeholder="Add any relevant details or remarks about your claim..."></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <hr />

        <div class="form-group mb-4">
            <label class="form-label fw-bold">📎 Supporting Documents</label>
            <input type="file" class="form-control" id="document" name="document" />
            <small class="form-text text-muted">Accepted file types: PDF, Word, or images. Max file size: 10MB</small>
        </div>

        <hr />

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">Submit Claim</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var hourlyRate = @currentUser.HourlyRate;

            function calculateTotal() {
                var hours = parseFloat($('#hoursWorked').val()) || 0;
                var total = hours * hourlyRate;

                $('#totalAmount').val(total.toFixed(2));

                if (total > 0) {
                    $('#totalAmount').css('color', '#198754');
                } else {
                    $('#totalAmount').css('color', '#6c757d');
                }

                // Validate max hours
                if (hours > 180) {
                    $('#hoursWorked').addClass('is-invalid');
                } else {
                    $('#hoursWorked').removeClass('is-invalid');
                }
            }

            $('#hoursWorked').on('input', calculateTotal);
            calculateTotal();
        });
    </script>
}