@model IEnumerable<CMCS_MVC_Prototype.Models.Claim>
@{
    ViewData["Title"] = "My Submitted Claims";
}

<div class="container mt-4">
    <h2>My Submitted Claims</h2>

    <!-- Search Section -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Search by Lecturer ID</h5>
            @using (Html.BeginForm("Index", "Claims", FormMethod.Get))
            {
                <div class="form-row">
                    <div class="col-md-4">
                        <input type="text" name="lecturerId" class="form-control" placeholder="Enter Lecturer ID" value="@ViewBag.LecturerId" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Claims Table -->
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Month</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Lecturer Name</th>
                        <th>Lecturer ID</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Notes</th>
                        <th>Documents</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.Month</td>
                            <td>@claim.HoursWorked.ToString("F2")</td>
                            <td>R @claim.HourlyRate.ToString("F2")</td>
                            <td>@claim.LecturerName</td>
                            <td>@claim.LecturerId</td>
                            <td class="fw-bold">R @claim.Total.ToString("F2")</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(claim.Status)">@claim.Status</span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.Notes))
                                {
                                    <span title="@claim.Notes">
                                        @(claim.Notes.Length > 30 ? claim.Notes.Substring(0, 30) + "..." : claim.Notes)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">No notes</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                {
                                    <a href="@Url.Content("~/Documents/" + claim.DocumentPath)" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-file-pdf"></i> View
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No documents</span>
                                }
                            </td>
                            <td>
                                @if (claim.Status == "Pending")
                                {
                                    <form asp-action="Delete" asp-route-id="@claim.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this claim?')"
                                                title="Delete Claim">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">No actions</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No claims found</h4>
            <p>You haven't submitted any claims yet.</p>
            <a asp-action="Create" class="btn btn-primary">Submit Your First Claim</a>
        </div>
    }
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        switch (status?.ToLower())
        {
            case "approved by coordinator":
                return "badge bg-success";
            case "approved by manager":
            case "paid":
                return "badge bg-info";
            case "rejected by coordinator":
            case "rejected by manager":
                return "badge bg-danger";
            case "pending":
            default:
                return "badge bg-warning text-dark";
        }
    }
}

@section Styles {
    <style>
        .table th {
            background-color: #343a40;
            color: white;
            font-weight: bold;
        }

        .badge {
            font-size: 0.85em;
            padding: 0.5em 0.75em;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.075);
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
}